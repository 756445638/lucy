fn testFloat() -> (ok bool = false) {
    var a , b float
    a = 1.0
    b = 2.0
    if 3.0 != a + b {
        return
    }
    if -1.0 != a - b {
        return
    }
    if 1.0 != b - a {
        return
    }
    if 2.0 != b * a {
        return
    }
    if 2.0 != b / a {
        return
    }
    if 0.5 != a / b {
        return
    }
    if 0.0 != b % a {
        return
    }
    if 1.0 != a % b {
        return
    }
    ok = true
}

