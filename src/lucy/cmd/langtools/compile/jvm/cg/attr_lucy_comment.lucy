import "lucy/binary"

public class AttributeLucyComment {
	public comment string
	fn ToAttributeInfo(c Class) -> (ret AttributeInfo)  {
		ret = new AttributeInfo()
		ret.attributeLength = 2
		ret.nameIndex = c.insertUtf8Const(AttributeNameLucyComment)
		ret.info = new []byte(2)
		index := c.insertUtf8Const(this.comment)
		binary.BigEndian.putChar(ret.info, index)
		return ret
	}
}


