
public fn New(
	bs []byte, 
	startLine, 
	endColumnOffset int,
	locateDefinition , 
	getHover , 
	findUsage ,
	rename,
	autoCompletion int ) -> (lex Lexer) {
		
	lex = new Lexer()
	lex.bs = bs
	lex.end = len(bs)
	lex.line = startLine
	lex.endColumnOffset = endColumnOffset
	lex.lastLine = startLine
	lex.locateDefinition = locateDefinition
	lex.getHover = getHover
	lex.findUsage = findUsage
	lex.rename = rename 
	lex.autoCompletion = autoCompletion 
}
