
public fn New(bs []byte, startLine, startColumn int,locateDefinition int = -1) -> (lex Lexer) {
	lex = new Lexer()
	lex.bs = bs
	lex.end = len(bs)
	lex.line = startLine
	lex.column = startColumn
	lex.lastLine = startLine
	lex.lastColumn = startColumn
	lex.locateDefinition = locateDefinition
	return lex
}
