
class CommentParser extends ParserFather {
    comment string

    fn CommentParser(parser Parser) {
        this.super(parser)
    }
    fn reset() {
        this.comment = ""
    }

    fn setComment(isMulti bool , comment string) {
        if this.comment == null {
            this.comment = ""
        }
        if isMulti {
            this.comment = comment
        } else {
            this.comment += "//" + comment
        }
    }
}


